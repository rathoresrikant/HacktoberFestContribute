#include<iostream>
#include <bits/stdc++.h> 
#include<string>
using namespace std; 
  

void reverse(string str) 
{ 
   for (int i=str.length()-1; i>=0; i--) 
      cout << str[i];  
} 
  
int main() 
{ 
    string s;
    cout<<"enter the string to reverse";
    cin>>s;
    reverse(s); 
    return (0); 
} 
