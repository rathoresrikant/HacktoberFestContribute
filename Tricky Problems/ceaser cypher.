#include<bits/stdc++.h>
using namespace std;

int main(){

	int n , y;
	cin>>n;

	string x;
	cin>>x;

	int k;
	cin>>k;

	for(int i=0; i<n; i++){

		y = int(x[i]);

		if((y>=65&&y<=90)){

         	y = y+k;

        if(y>90){                                                                                                 
         		y = y-k;
         		y = y+k - 90 + 65 - 1;
         	}

		}

        else if((y>=97&&y<=122)){

         	y = y+k;

         	if(y>122){
         		y = y-k;
         		y = y+k - 122 + 97 - 1;
         	}


         }

         x[i] = char(int(y));

      
	}
    cout<<x;
}
